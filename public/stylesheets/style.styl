primary-orange-color = #FF9D00
dark-orange-color = #E8510C
link-color = #0011B2

@keyframes navShadow
	from {
		color red
	}
	to {
		color orange
	}

body 
	font 14px Roboto, Arial, sans-serif
	font-weight 300

	padding 0
	margin 0

	background url(../images/gray-bg.jpg) repeat

a 
	color link-color
	text-decoration none

	&:hover
		text-decoration underline

.btn
	margin 0 5px

#input_container
	display block
	width 500px
	text-align center
	margin auto
	font-size 30pt

	.input
		border 1px solid red
		width 150px
		margin 1em
		float left
		height 100px

		.content
			.new
				display none

#header
	position relative

	background-color dark-orange-color
	color white
	padding 1em 0

	box-shadow 0 0 15px #000
	
	z-index 50

	.container
		width 1024px
		margin auto
		overflow hidden

		#logo
			float left
			//font-family 'Bevan', cursive
			font-family: 'Lobster', cursive;
			padding-left 9px
			font-size 30pt
			letter-spacing 3px

			a
				color white
				text-shadow -1px 0 5px primary-orange-color, 0 1px 5px primary-orange-color, 1px 0 5px primary-orange-color, 0 -1px 5px primary-orange-color

				&:hover
					text-decoration none

		#user
			float right
			font-size 10px
			padding 0.5em 2em

			span
				color primary-orange-color

		#nav

			ul
				padding 0
				margin 0

				li
					display inline-block

					a
						color white
						font-size 14pt
						text-decoration none
						
						line-height 50px
						padding 0 2em

						vertical-align middle

						&:hover
							text-shadow -1px 0 3px primary-orange-color, 0 1px 3px primary-orange-color, 1px 0 3px primary-orange-color, 0 -1px 3px primary-orange-color
							
					&:first-child

						a
							padding-left 4em


#container
	position relative
	width 1000px
	margin auto
	background-color white
	box-shadow 0 0 15px #aaa
	border-bottom-left-radius 5px
	border-bottom-right-radius 5px
	
#container

	> .inner 
		padding 2em

.player
	width 46%
	margin 1%
	padding 1%

	float left;

	.inner
		border 1px solid dark-orange-color

		.title
			font-size 150%
			color #555

			.position
				padding 0.5em
				background-color dark-orange-color
				color white

			.name
				font-size 75%
				padding 0.5em

		.guess
			text-align center

			input[type='text']
				display inline-block
				margin 4% 1%
				padding 0
				text-align center
				width 1em

				font-size 400%
			input[type='submit']
				width 50%
				margin auto

		.moves
			padding 1em


#footer
	width 1000px
	background-color white
	margin 1em auto

	box-shadow 0 0 15px #aaa
	border-radius 5px
	
	.inner
		padding 1em 2em