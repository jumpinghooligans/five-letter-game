extends ../layout

block content
	h1 #{ game.name }
	hr
	if errors
		each error in errors
			.error.alert #{error}
	#left.player
		.inner
			.title
				.word #{ game.player1word }
				.name #{ helpers.gameUsername(game.player1) }
			.word-input
				if game.player1 == username
					form(method='POST')
						input(type='text', id='input', name='word', maxlength='5', value='')
						input(type='submit', class='btn btn-default')
				else
						h1 - - - - -
			.moves
				each move in helpers.getMoves(game.words, game.player1)
					p #{ move.word } (#{move.letters}) - [#{move.positions}]

	#right.player
		.inner
			.title
				.word #{ game.player2word }
				.name #{ helpers.gameUsername(game.player2) }
			if !game.player2
				.word-input
					form(method='POST', action='/games/#{game.name}/join')
						input(type='submit', value='Join Game', class='btn btn-primary')
			else
				.word-input
					if game.player2 == username
						form(method='POST')
							input(type='text', id='input', name='word', maxlength='5', value='')
							input(type='submit', class='btn btn-default')
					else
						h1 - - - - -
				.moves
					each move in helpers.getMoves(game.words, game.player2)
						p #{ move.word } (#{move.letters}) - [#{move.positions}]

	div(style='clear:both')
	#options
		a(href='/games', class='btn btn-default') Back to Games
		a(href="/games/#{game.name}/delete", class='btn btn-danger') Delete Game