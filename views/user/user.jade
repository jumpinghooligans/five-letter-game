extends ../layout

block content
	h1 #{ user.username }
	hr
	p #{ user.username } has been a member since #{ helpers.getMonthName(user.joined.getMonth()) }, #{ user.joined.getFullYear() }
	p: a(href='mailto:#{ user.email }') #{ user.email }
	br
	p
		a(href='/users', class='btn btn-default') Back to Users
		a(href='/users/' + user.username + '/delete', class='btn btn-danger') Delete